{
  "name": "<%= projectNameSlug %>",
  "description": "<%= projectDescription %>",
  "version": "<%= projectVersion %>",
  "homepage": "https://github.com/<%= userName %>/<%= projectNameSlug %>",
  "author": {
      "name": "<%= authorName %>",
      "email": "<%= authorEmail %>"
  },
  "repository": {
      "type": "git",
      "url": "git://github.com/<%= userName %>/<%= projectNameSlug %>.git"
  },
  "bugs": {
      "url": "https://github.com/<%= userName %>/<%= projectNameSlug %>/issues"
  },
  "licenses": [{
      "type": "<%= license %>",
      "url": "https://github.com/<%= userName %>/<%= projectNameSlug %>/blob/master/LICENSE"
  }],
  "main": "gulpfile.js",
  "browserify": {
    "transform": [
      "coffeeify",
      "jadeify"
    ]
  },
  "dependencies": {
    <% if (projectCss === 'bourbon/neat') { %>
    "normalize.css": "^3.0.3"
    <% } else { %>
      // TODO: Add bootstrap
    <% } %>
  },
  "devDependencies": {
    <% if (projectCss === 'bourbon/neat') { %>
    "node-bourbon": "~4.2.2",
    "node-neat": "~1.7.1-beta1",
    <% } %>
    "browser-sync": "~2.9.11",
    "browserify": "12.0.1",
    "coffee-script": "^1.9.2",
    "coffeeify": "1.1.0",
    "del": "^2.0.2",
    "gulp": "^3.8.11",
    "gulp-autoprefixer": "3.1.0",
    "gulp-imagemin": "2.3.0",
    "gulp-jade": "1.1.0",
    "gulp-minify-css": "~1.2.1",
    "gulp-minify-html": "~1.0.2",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.0",
    "gulp-rename": "~1.2.2",
    "gulp-s3": "^0.3.0",
    "gulp-sass": "2.1.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "~1.4.2",
    "gulp-util": "^3.0.4",
    "imagemin-pngcrush": "4.1.0",
    "jade": "^1.9.2",
    "jadeify": "4.4.0",
    "merge-stream": "~1.0.0",
    "require-dir": "^0.3.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "3.5.0"
  }
}
