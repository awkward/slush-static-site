include ../_mixins/_header.jade
include ../_mixins/_footer.jade
include ../_includes/_variables.jade

doctype html
html
  head
    block title
      title <%= projectName %>

    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')

      meta(name='description', content='#{description}')

      meta(property='og:description', content='#{description}')
      meta(property='og:image', content='#{image_src}')
      meta(property='og:site_name', content='#{domain}')
      meta(property='og:title', content='#{title}')
      meta(property='og:type', content='#{type}')
      meta(property='og:url', content='#{site_url}')

      meta(name='twitter:creator', content='#{twitter_handle}')
      meta(name='twitter:site', content='#{twitter_handle}')
      meta(name='twitter:card', content='#{twitter_card_type}')
      meta(name='twitter:url', content='#{site_url}')
      meta(name='twitter:title', content='#{title}')
      meta(name='twitter:description', content='#{description}')
      meta(name='twitter:image:src', content='#{image_src}')
      meta(name='twitter:site', content='#{twitter_handle}')
      meta(name='twitter:domain', content='#{domain}')

    link(rel='shortcut icon', href='#{image_src}')

    block stylesheets
      link(rel='stylesheet' href='stylesheets/main.css')

  body
    block header
      +header
    block content

    block footer
      +footer

    block scripts
      script(src="../scripts/main.js")
